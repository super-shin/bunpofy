<div class="body-container"
  data-controller="spelling-game"
  data-spelling-game-words-array-value="<%= @words_array_spelling_en.to_json %>"
  data-spelling-game-jpwords-array-value="<%= @words_array_spelling_jp.to_json %>"
  data-spelling-game-correct-sound-value="<%= audio_path("success.wav") %>"
  data-spelling-game-incorrect-sound-value="<%= audio_path("fail.wav") %>">
    <h1 class="h1-custom">Spelling Mission</h1>
    <form class="custom-form" data-action="submit->spelling-game#correctSpelling">
      <input type="text" id="wordInput" placeholder="spell the word..." data-spelling-game-target="input">
      <input type="submit" class="spelling-guess">
    </form>
      <div id="score"></div>
      <div id="hint" class="mb-3"></div>
      <button class="custom-button" data-action="click->spelling-game#textToSpeech">
      <i class="fa-solid fa-volume-up ml-6"> Pronounce
      </i>
      </button>
      <div data-spelling-game-target="results" class="mt-5">
      </div>
      <div class="row">
      <div class="col-8"></div>
      <div class="col-4">
      </div>
    </div>
</div>

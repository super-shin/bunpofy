<div class="login-container container mt-5" style="max-width: 30%; min-height: 95vh;">
  <div class="login-form-container">
    <div class="login-form-content">
      <h3>Login</h3>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      label: false,
                      placeholder: 'Username',
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      label: false,
                      placeholder: 'Password',
                      required: true,
                      input_html: { autocomplete: "current-password", class: 'form-control' } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group remember-me">
            <%= f.input :remember_me, as: :boolean, label: 'Remember me', class: 'checkbox' %>
          </div>
        <% end %>
        <div class="form-actions">
          <%= f.button :submit, "Log In", class: 'btn-primary text-white rounded-pill px-5' %>
        </div>
      <% end %>
      <div class="forgot-password">
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'forgot-pass' %>
      </div>
    </div>
  </div>
</div>

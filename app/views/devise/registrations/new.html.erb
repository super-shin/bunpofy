<div class="container" style="max-width: 30%; height: 100vh;">
  <div class="signup-container p-5 border border-white border-5 mt-5">
    <h3 class="signup-heading mb-5">Sign Up</h3>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
      <%= f.error_notification class: 'error-notification' %>
      <div class="form-inputs">
        <%= f.input :first_name,
                    required: true,
                    placeholder: 'First Name',
                    label: false,
                    input_html: { class: 'form-control' } %>
        <%= f.input :last_name,
                    required: true,
                    placeholder: 'Last Name',
                    label: false,
                    input_html: { class: 'form-control' } %>
        <%= f.input :role,
                    required: true,
                    placeholder: 'Role',
                    label: false,
                    input_html: { class: 'form-control' } %>
        <%= f.input :school,
                    required: true,
                    placeholder: 'School',
                    label: false,
                    input_html: { class: 'form-control' } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: 'Email',
                    label: false,
                    input_html: { autocomplete: "email", class: 'form-control' } %>
        <%= f.input :password,
                    required: true,
                    placeholder: 'Password',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label: false,
                    input_html: { autocomplete: "new-password", class: 'form-control' } %>
        <%= f.input :password_confirmation,
                    required: true,
                    placeholder: 'Confirm Password',
                    label: false,
                    input_html: { autocomplete: "new-password", class: 'form-control' } %>
      </div>
      <div class="form-actions d-flex align-items-center justify-content-end gap-2 mt-5">
        <%= render "devise/shared/links" %>
        <%= f.button :submit, "Sign Up", class: 'btn-primary rounded-pill text-white px-5' %>
      </div>
    <% end %>
  </div>
</div>
